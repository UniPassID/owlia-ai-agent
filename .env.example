# Server
NODE_ENV=development
PORT=3000

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MODEL=claude-3-5-sonnet-20241022

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=defi_agent

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MCP Server (Stdio)
# Example: npx -y @modelcontextprotocol/server-defi
# Or: node /path/to/your/mcp-server.js
MCP_SERVER_COMMAND=npx
MCP_SERVER_ARGS=-y,@modelcontextprotocol/server-defi

# Monitoring
MONITOR_INTERVAL_MS=300000

# Rebalance Logs
REBALANCE_LOG_DIR=./logs/rebalance
REBALANCE_LOG_RETENTION_DAYS=30
REBALANCE_LOG_FORMAT=both
